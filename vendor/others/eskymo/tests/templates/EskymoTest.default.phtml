    background: #DB1000;
}
h2.test {
    border-bottom-style: solid;
    border-bottom-width: 2px;
    font-size: 120%;
    padding: 5px 10px;
}
h2.success {
    color: green;
    border-color: green;
}
h2.success a {
    color: green;
}
h2.not-success {
    color: #DB1000;
    border-color: #DB1000;
}
